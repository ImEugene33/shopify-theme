<section class="hero hero--[ id ]">

  <div class="hero-content">
    <h2 class="hero_heading">{{ section.settings.heading }}</h2>
    <p class="hero_copy" >{{ section.settings.copy }}</p>
  </div>

</section>

<style>
.hero--[id] {
background-image:url({{ section.settings.small_img | img_url: 'master' }})
}
</style>


{% schema %}
  {
    "name": "Hero",
    "settings": [
      {
        "type": "text",
        "id":"heading",
        "label":"Heading",
        "default":"Hello"
      },
       {
        "type": "textarea",
        "id":"copy",
        "label":"Body Copy"
      },
      {
        "type": "url",
        "id":"link_url",
        "label":"Link URL"
      },
      {
        "type": "image_picker",
        "id":"small_img",
        "label":"Small Image"
      },
      {
        "type": "image_picker",
        "id":"large_img",
        "label":"Large Image"
      }
    ],
    "presets":[
      {
        "name":"Hero",
        "category":"Custom"
      }
    ]
  }
{% endschema %}