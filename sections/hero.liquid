<script src="{{ 'swiper.js' | asset_url }}" defer="defer"></script>

<section class="hero ">
  <div class="swiper mySwiper">
    {% for block in section.blocks %}
      {% assign item = block.settings %}
      <div class="swiper-wrapper">
        <div class="swiper-slide">
          <div class="hero-content hero--{{ item.id }}">
            <h2 class="hero_heading">{{ item.heading }}</h2>
            <p class="hero_copy">{{ item.copy }}</p>
          </div>
        </div>
      </div>
      <div class="swiper-button-prev"></div>
      <div class="swiper-button-next"></div>
    {% endfor %}
  </div>
</section>

<style>
  .hero-content {
    color: white;
    text-align:center;
    min-height:400px;
  }

  .hero--{{ section.id }}{
    background-image: url('{{ item.small_img | image_url }}');
    background-size: cover;

  }
  @media(min-width: 920px) {
    .hero--{{ section.id }}{
       background-image: url('{{ item.large_img | image_url: width: 1300, height: 400, crop: 'bottom' }}');
    }
  }
</style>

{% schema %}
{
  "name": "Hero",
  "blocks": [
    {
      "name": "Slideshow",
      "type": "slide",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Bye Bye"
        },
        {
          "type": "textarea",
          "id": "copy",
          "label": "Body Copy",
          "default": "!Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. "
        },
        {
          "type": "image_picker",
          "id": "small_img",
          "label": "Small Image"
        },
        {
          "type": "image_picker",
          "id": "large_img",
          "label": "Large Image"
        }
      ]
    }
  ],

  "presets": [
    {
      "name": "Hero",
      "category": "Custom"
    }
  ]
}
{% endschema %}
