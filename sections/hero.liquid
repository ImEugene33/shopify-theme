<section class="hero--{{ id }}">
  <h2 class="hero_heading">{{ settings.heading }}</h2>
  <p class="hero_copy" >{{ settings.copy }}</p>

</section>

{% schema %}
  {
    "name": "Hero",
    "settings": [
      {
        "type": "text",
        "id":"heading",
        "label":"Heading",
        "default":"Hello"
      },
       {
        "type": "textarea",
        "id":"copy",
        "label":"Body Copy"
      },
      {
        "type": "url",
        "id":"link_url",
        "label":"Link URL"
      },
      {
        "type": "image_picker",
        "id":"small_img",
        "label":"Small Image"
      },
      {
        "type": "image_picker",
        "id":"large_img",
        "label":"Large Image"
      }
    ],
    "presets":[
      {
        "name":"Hero",
        "category":"Custom"
      }
    ]
  }
{% endschema %}