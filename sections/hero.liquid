<script src="{{ 'swiper.js' | asset_url }}" defer="defer"></script>

<section class="hero ">
  <div class="swiper mySwiper">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide ">
          <img src="{{ block.settings.large_img | image_url: width: 1300, height: 400 }}" loading="lazy">
          <div class="hero-content hero--{{ block.id }}">
            <h2 class="hero_heading">{{ block.settings.heading }}</h2>
            <p class="hero_copy">{{ block.settings.copy }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>
  </div>
</section>

<style>
  .swiper-slide {
    color: black;
    text-align:center;
    position: relative;
    min-height:400px;
  }

  .hero-content{
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  .hero--{{ block.id }}{
    background-image: url('{{ block.settings.small_img | image_url }}');
    background-size: cover;

  }
  @media(min-width: 920px) {
    .hero--{{ block.id }}{
       background-image: url('{{ block.settings.large_img | image_url: width: 1300, height: 400, crop: 'bottom' }}');
    }
  }
</style>

{% schema %}
{
  "name": "Hero",
  "blocks": [
    {
      "name": "Slideshow",
      "type": "slide",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Bye Bye"
        },
        {
          "type": "textarea",
          "id": "copy",
          "label": "Body Copy",
          "default": "!Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. "
        },
        {
          "type": "image_picker",
          "id": "small_img",
          "label": "Small Image"
        },
        {
          "type": "image_picker",
          "id": "large_img",
          "label": "Large Image"
        }
      ]
    }
  ],

  "presets": [
    {
      "name": "Hero",
      "category": "Custom"
    }
  ]
}
{% endschema %}
