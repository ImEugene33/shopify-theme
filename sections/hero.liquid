<script src="{{ 'swiper.js' | asset_url }}" defer="defer"></script>

<section class="hero ">
  <div class="swiper mySwiper">
    <div class="swiper-wrapper">
      <div class="swiper-slide">
        <div class="hero-content hero--{{ section.id }}">
          <h2 class="hero_heading">{{ section.settings.heading }}</h2>
          <p class="hero_copy">{{ section.settings.copy }}</p>
        </div>
      </div>
    </div>
    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>
  </div>
</section>

<style>
  .hero-content {
    color: white;
    text-align:center;
    min-height:400px;
  }

  .hero--{{ section.id }}{
    background-image: url('{{ section.settings.small_img | image_url }}');
    background-size: cover;

  }
  @media(min-width: 920px) {
    .hero--{{ section.id }}{
       background-image: url('{{ section.settings.large_img | image_url: width: 1300, height: 400, crop: 'bottom' }}');
    }
  }
</style>

{% schema %}
{
  "name": "Hero",
  "max_blocks": 5,
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Bye Bye"
    }
  ],
  "blocks": [
    {
      "name": "Slide",
      "type": "slide",
      "settings": [
        {
          "type": "textarea",
          "id": "copy",
          "label": "Body Copy",
          "default": "!Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. "
        },
        {
          "type": "image_picker",
          "id": "small_img",
          "label": "Small Image"
        },
        {
          "type": "image_picker",
          "id": "large_img",
          "label": "Large Image"
        }
      ]
    }
  ],

  "presets": [
    {
      "name": "Hero",
      "category": "Custom"
    }
  ]
}
{% endschema %}
